{
  "SmartFactory": {
    "ApiBaseUrl": "http://faradarsss.sbs/api",
    "ApiEndpoint": "/sensor/raw",
    "RetryAttempts": 3,
    "RetryDelay": 2000
  },
  "SerialPort": {
    "PortName": "COM1",
    "BaudRate": 9600,
    "Parity": "None",
    "DataBits": 8,
    "StopBits": "One",
    "Handshake": "None",
    "ReadTimeout": 5000,
    "WriteTimeout": 5000
  },
  "Application": {
    "LogLevel": "Information",
    "DataSendInterval": 1000,
    "MaxRetries": 5,
    "EnableConsoleOutput": true,
    "EnableFileLogging": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}